<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/17.0.10ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.test.mainFX">

    <!-- En-tête pour la section "Gestion des Dons" -->
    <VBox spacing="10" style="-fx-background-color: #B6D8F2; -fx-padding: 20px;">
        <Label style="-fx-font-size: 24px; -fx-text-fill: #283747; -fx-font-weight: bold;" text="Gestion des Dons" />
        <Button onAction="#afficherInterfaceAjoutDon" style="-fx-background-color: #283747; -fx-text-fill: #B6D8F2; -fx-font-weight: bold; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-background-radius: 5px;" text="Ajouter Don" />
    </VBox>

    <!-- En-tête pour la section "Gestion des Investisseurs" -->
    <VBox spacing="10" style="-fx-background-color: #F4CFDF; -fx-padding: 20px;">
        <Label style="-fx-font-size: 24px; -fx-text-fill: #6C3483; -fx-font-weight: bold;" text="Gestion des Investisseurs" />
        <Button onAction="#afficherInterfaceAjoutInvestisseur" style="-fx-background-color: #6C3483; -fx-text-fill: #F4CFDF; -fx-font-weight: bold; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-background-radius: 5px;" text="Ajouter Investisseur" />
    </VBox>

    <!-- En-tête pour la section "Gestion des Investissements" -->
    <VBox spacing="10" style="-fx-background-color: #9AC8EB; -fx-padding: 20px;">
        <Label style="-fx-font-size: 24px; -fx-text-fill: #0D47A1; -fx-font-weight: bold;" text="Gestion des Investissements" />
        <Button onAction="#afficherInterfaceAjoutInvestissement" style="-fx-background-color: #0D47A1; -fx-text-fill: #9AC8EB; -fx-font-weight: bold; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-background-radius: 5px;" text="Ajouter Investissement" />
        <Button onAction="#afficherInterfaceSuppressionInvestissement" style="-fx-background-color: #0D47A1; -fx-text-fill: #9AC8EB; -fx-font-weight: bold; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-background-radius: 5px;" text="Supprimer Investissement" />
    </VBox>
</VBox>
